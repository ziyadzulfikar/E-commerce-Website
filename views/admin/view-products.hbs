<section>
    <div class="container mt-5">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Products</a>
        </div>
    </div>
    <div class="container mt-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">Products</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <th scope="row">{{si}}</th>
                        <td>{{Name}}</td>
                        <td>{{Category}}</td>
                        <td>{{Description}}</td>
                        <td><img src="/product-images/{{this._id}}.jpg" alt="" srcset="" style="height: 50px; width: 50px;"></td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}} from your list')">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

